<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjf.faraway">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:name="com.sjf.baselib.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity
            android:name="com.sjf.faraway.activity.TestActivity"
            android:configChanges="keyboardHidden|orientation|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sjf.faraway.activity.SampleActivity"
            android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.sjf.faraway.activity.SAMPLEACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sjf.faraway.activity.SimpleActivity"
            android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.sjf.faraway.activity.SIMPLEACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sjf.faraway.activity.ComplexActivity"
            android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.sjf.faraway.activity.COMPLEXACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>

</manifest>